				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status is 200\", () => pm.response.code === 200);",
							"const json = pm.response.json();",
							"pm.test(\"Page is 2\", () => json.page === 2);",
							"pm.test(\"Has users array\", () => Array.isArray(json.data) && json.data.length > 0);",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"auth": {
					"type": "noauth"
				},
				"method": "GET",
				"header": [
					{
						"key": "x-api-key",
						"value": "reqres-free-v1",
